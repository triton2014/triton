<% if current_user.role == 'admin' %> 
<!DOCTYPE html>
<html lang="en">

<head></head>

<body>

<div class="col-sm-12">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="col-sm-12">
            <div class="row bg_white pad_top2 radius">
              
                <div class="col-sm-3 bg_green right_radius pad_top min_height">
                    <div class="col-sm-4"></div>
                    <div class="col-xs-3 col-sm-8">
                       <%= render 'common/profile_pic' %>
                        <div class="margin_l-3">                            
                            <h6 class="caption font_style1 pull-right"><%= current_user.first_name %></h6>
                        </div>
                    </div>
                    
                </div>

                <div class="col-sm-9 pad_rl2 pad_t_res">
                    <div class ="row pad_left radius bg_silver">
                        <i style="float: left;"><img class="img-responsive" src="/assets/profile.png" alt=""></i>
                        <p class="para_link"> &nbsp; Admin > <span class="para_link_last">Edit User</span></p>
                    </div>
                    <div class="row pad_top">
                        
                   <div class="col-sm-12 col-md-12 col-lg-12 ">
                    <%= form_tag update_user_dashboards_path, class: "form-horizontal" do  %>
                    <%= hidden_field_tag :id , @edited_user.id %>

                      

                      <div class="form-group">                
                        <label class="control-label col-sm-5 col-md-4 col-lg-3">First Name</label>
                        <div class="col-sm-7 col-md-8 col-lg-7">
                        <%= text_field_tag :first_name, @edited_user.first_name,  type:"text", tabindex: "1", class: "form-control", placeholder: 'Enter The First Name',  required: true %>
                      </div>
                      </div>

                      <div class="form-group">
                        <label class="control-label col-sm-5 col-md-4 col-lg-3">Last Name</label>
                        <div class="col-sm-7 col-md-8 col-lg-7">
                        <%= text_field_tag :last_name, @edited_user.last_name,   type:"text", tabindex: "2", class: "form-control", placeholder: 'Enter The Last Name' %>
                      </div>
                    </div>

                      <div class="form-group">
                        <label class="control-label col-sm-5 col-md-4 col-lg-3">Email</label>
                        <div class="col-sm-7 col-md-8 col-lg-7">
                        <%= text_field_tag :email,  @edited_user.email,  type:"email", tabindex: "3", class: "form-control",  placeholder: 'Enter The Email Address',  required: true %>
                      </div>
                    </div>

                      <div class="form-group">
                        <label class="control-label col-sm-5 col-md-4 col-lg-3">Select Role</label>
                        <div class="col-sm-7 col-md-8 col-lg-7">
                          <% if @edited_user.role == "Manager" %>
                        <%= select_tag :role, options_for_select([@edited_user.role,"Customer"]), tabindex: "4", class: "form-control" %>
                        <% else %>
                        <%= select_tag :role, options_for_select([@edited_user.role,"Manager"]), tabindex: "4", class: "form-control" %>
                        <% end %>
                      </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-5 col-md-4 col-lg-3">Password</label>
                        <div class="col-sm-7 col-md-8 col-lg-7">
                        <%= text_field_tag :password,  nil, type:"text", tabindex: "5", class: "form-control",  placeholder: 'Create a Password',  required: true %>
                      </div>
                    </div>

                      <div class="form-group">
                      <label class="control-label col-sm-5 col-md-4 col-lg-3">Retype Password</label>
                        <div class="col-sm-7 col-md-8 col-lg-7">                  
                        <%= text_field_tag :password_confirmation,  nil, type:"text", tabindex: "6", class: "form-control",  placeholder: 'Retype Password',  required: true %>
                      </div>
                    </div>
                      
                      <div class="row">
                      <div class="actions">
                      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-5">
                        <%= submit_tag 'Submit', :class => 'btn btn-warning btn-block', tabindex: "7" %>
                      </div> 
                      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-5">
                        <%= link_to 'Cancel', dashboards_path, :class => 'btn btn-warning btn-block', tabindex: "8" %>
                      </div>                 
                      
                    </div>
                    </div>
                    <% end %>
                       
                  </div>
                        
        
          

                    </div>                    

                </div>
               

                <div class="col-sm-12 pad_top2">
                    <div class="row bg_black bottom_radius">
                        <p class="font_style1 pad_left"> &copy; | Triton | All Rights Reserved |</p>
                    </div>

                </div>

            </div>

        </div>

    </div>
    <div class="col-sm-1"></div>
</div>

    <!-- jQuery Version 1.11.0 -->
    <script src="/assets/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>

</body>

</html>

<% end %>
