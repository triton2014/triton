<% if current_user.role == 'Manager' %> 
<!DOCTYPE html>
<html lang="en">

<head></head>

<body>

<div class="col-sm-12 margin_lf30">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="col-sm-12">
            <div class="row bg_white pad_top2 radius">      

                <div class="col-sm-3 bg_green right_radius pad_top min_height">
                    <div class="col-sm-4"></div>
                    <div class="col-xs-3 col-sm-8">
                       <%= render 'common/profile_pic' %>
                        <div class="margin_l-3">                            
                            <h6 class="caption font_style1 pull-right"><%= current_user.first_name %></h6> 
                        </div>
                    </div>                    
                </div>

                <div class="col-sm-9 pad_rl2 pad_t_res">
                    <div class ="row pad_left radius bg_silver">
                        <i style="float: left;"><img class="img-responsive" src="/assets/project.png" alt=""></i>
                        <p class="para_link"> &nbsp; Projects > <%= @site.project.name %> > <span class="para_link_last">Rename Site</span></p>
                    </div>
                    <div class="row pad_top">
                        <!-- <p>Site</p> -->
                        <hr>
                        <%= form_tag update_site_project_sites_path, class: "form-horizontal" do  %>
                        <%= hidden_field_tag :id , @site.id %>
                          <div class="form-group">                
                              <label class="control-label col-sm-3 col-lg-2">Site Name</label>
                              <div class="col-sm-6 col-lg-6">
                              <%= text_field_tag :name, @site.name, type:"text", tabindex: "1", class: "form-control", pattern: "[!-~ ]{1,30}",  placeholder: 'Enter The Site  Name',  required: true %>
                              </div>
                          </div>
                          <div class="row">
                              <div class="actions">
                                  <div class="col-sm-3 col-lg-2"></div>         
                                  <div class="col-xs-5 col-sm-3 col-lg-3">
                                  <%= submit_tag 'Submit', :class => 'btn btn-warning btn-block', tabindex: "2" %>
                                  </div>
                                  <div class="col-xs-5 col-sm-3 col-lg-3">
                                  <%= link_to 'Cancel', project_site_path(@site.project.id,@site.id), :class => 'btn btn-warning btn-block', tabindex: "3" %>
                                  </div>
                                  <div class="col-xs-2 col-sm-3 col-lg-4"></div>
                              </div> 
                          </div>                     
                       <% end %>  
                       
                        <div class="row">
                            <div class="col-sm-12">
                                <br>
                                <hr>
                            </div>
                        </div>
                          
                    </div>
                           
						  
			             
                </div>  

                <div class="col-sm-12 pad_top2">
                    <div class="row bg_black bottom_radius">
                        <p class="font_style1 pad_left"> &copy; | Triton | All Rights Reserved |</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
</div>



    

    <!-- jQuery Version 1.11.0 -->
    <script src="/assets/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>

</body>

</html>

<% end %>



