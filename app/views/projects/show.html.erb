<!DOCTYPE html>
<html lang="en">

<head>
</head>

<body>

<div class="col-sm-12 margin_lf30">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="col-sm-12">
            <div class="row bg_white pad_top2 radius">      

                <div class="col-sm-3 bg_green right_radius pad_top min_height">
                    <div class="col-sm-4"></div>
                    <div class="col-xs-3 col-sm-8">
                       <%= render 'common/profile_pic' %>
                        <div class="margin_l-3">                            
                            <h6 class="caption font_style1 pull-right"><%= current_user.first_name %></h6> 
                        </div>
                    </div>                    
                </div>

                <div class="col-sm-9 pad_rl2 pad_t_res">
                    <div class ="row pad_left radius bg_silver">
                        <i style="float: left;"><img class="img-responsive" src="/assets/project.png" alt=""></i>
                        <p class="para_link"> &nbsp; Projects > <span class="para_link_last"> <%= @project.name %></span></p>
                    </div>
                    <div class="row pad_top">
                        
                       <div class="row">
                            
                            <div class="col-xs-12 hidden-lg">
                                <% if current_user.role == 'Manager' %>
                                   <td class="pull-right"> <%= link_to 'Edit Project', edit_project_path(@project), :class => 'btn btn-warning margin_bot2p', tabindex: "2" %> </td>
                                   <td class="pull-right"> <%= link_to 'Delete Project', delete_project_projects_path(id: @project.id),method: :put, data: { confirm: 'Are you sure?' }, :class => 'btn btn-warning margin_bot2p', tabindex: "1" %> </td>

                                    <% end %>
                            </div>                            
                        </div>
                        
                    <table class = "table table-condensed">
                        <thead class="table_head">
                            <tr>
                                <th>Project Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>            
                            <tr>
                                <td><%= @project.name %></td>
                                <td><%= @project.start_date.to_date() %></td>
                                <td><%= @project.estimated_end_date.to_date() %></td>
                                
                                <% if current_user.role == 'Manager' %>  

                                   <td class="pull-right hidden-xs hidden-sm hidden-md"> <%= link_to 'Delete Project', delete_project_projects_path(id: @project.id),method: :put, data: { confirm: 'Are you sure?' }, :class => 'btn btn-warning', tabindex: "1" %> </td>
                                   <td class="pull-right hidden-xs hidden-sm hidden-md"> <%= link_to 'Edit Project', edit_project_path(@project), :class => 'btn btn-warning', tabindex: "2" %> </td>

                                    <% end %>
                                    
                                
                            </tr>                        
                        </tbody>
                    </table>

                    <hr>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-xs-4 col-sm-4 col-md-6"> 
                                        <div class="row">                                   
                                        <span><h4>List of Sites</h4></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6">
                                        <% if current_user.role == 'Manager' %>
                                        <span><%= link_to 'Add a site', new_project_site_path(@project), :class => 'btn btn-warning', tabindex: "2" %></span>  
                                                           
                                        <% end %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">    
                                        <div class="row scroll_project">
                                            <% @project.sites.each do |site| %>
                                               <%= link_to "#{site.name}" ,"/projects/#{@project.id}/sites/#{site.id}" %> <br>
                                            <% end %>
                                        </div>
                                    </div>                                    
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="row">
                                    <% if current_user.role == 'Manager' %>
                                    <div class="col-xs-4 col-sm-4 col-md-6">
                                        <div class="row">     
                                        <span><h4>List of Users</h4></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6">   
                                        <%= link_to 'Assign Users', list_users_dashboards_path(:id => @project.id), :class => 'btn btn-warning', tabindex: "1" %>
                                    </div>
                                    <% end %>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">                               
                                <% if current_user.role == 'Manager' %>
                                    <div class="row scroll_project">
                                        <% @users_for_project.each do |u1| %>
                                           <%= u1.first_name %> <br>
                                        <% end %>
                                    </div>
                                <% end %>
                                    </div>
                                </div>
                            </div>

                            </div>
                        </div>               
                        <hr>
                    </div>
                </div>

                <div class="col-sm-12 pad_top2">
                    <div class="row bg_black bottom_radius">
                        <p class="font_style1 pad_left"> &copy; | Triton | All Rights Reserved |</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-sm-1" id="abc">
        

    </div>
</div>



    

    <!-- jQuery Version 1.11.0 -->
    <script src="/assets/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>

</body>

</html>



