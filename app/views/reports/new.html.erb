<% if current_user.role == 'Manager' %> 
<!DOCTYPE html>
<html lang="en">

<head>
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-wysihtml5.css"></link>
<script src="/assets/bootstrap-wysihtml5.js"></script>
</head>

<body>

<div class="col-sm-12">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <div class="col-sm-12">
            <div class="row bg_white pad_top2 radius">      

                <div class="col-sm-3 bg_green right_radius pad_top min_height">
                    <div class="row">
                        <div class="col-sm-12">
                              <div class="col-sm-4"></div>
                              <div class="col-xs-3 col-sm-8">
                                 <%= render 'common/profile_pic' %>
                                  <div class="margin_l-3">                                      
                                      <h6 class="caption font_style1 pull-right"><%= current_user.first_name %></h6> <br> 
                                  </div>
                              </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-9 pad_rl2 pad_t_res">
                    <div class ="row pad_left radius bg_silver">
                        <i style="float: left;"><img class="img-responsive" src="/assets/project.png" alt=""></i>
                        <p class="para_link"> &nbsp; Projects > <%=@site.project.name %> > <%= @site.name %> > <span class="para_link_last">Add Report</span></p>
                    </div>
                    <div class="row pad_top">

           <div class="col-sm-12">

                <ul id="myTab" class="nav nav-pills">
                  <li class="active"><a class="nav_style" href="#tristatus" data-toggle="tab">TRI-STATUS</a></li>
                  <li ><a class="nav_style" href="#triharder" data-toggle="tab">TRI-HARDER</a></li>                   
                </ul>
             
                <div id="myTabContent" class="tab-content">         <!-- full tab content -->

                      <div class="tab-pane fade in active" id="tristatus">
                          
                            <div class="well" id="table_scroll_tri">
                            <div class="row"> 
                            <div class="col-sm-12">                          

                              <%= form_tag project_site_reports_path,:multipart => true,  class: "form-horizontal" do  %>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Summary</label>
                                  <div class="col-sm-9">                                  
                                      <%= text_field_tag "report[summary]", nil, type:"text", tabindex: "1", class: "form-control",  placeholder: 'Fill The Summary' %>
                                  </div>
                              </div>                       


                              <div class="form-group">
                                  <label class="control-label col-sm-3">Efficiency</label>
                                  <div class="col-sm-9">                                  
                                      <%= text_field_tag "report[effciency]", nil, type:"text", tabindex: "2", class: "form-control",  placeholder: 'Fill The Efficiency' %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Taday's Tasks</label>
                                  <div class="col-sm-9">                       
                                      <%= text_area_tag "report[todays_task]", nil, type:"text", tabindex: "6", class: "form-control", id: "today_textarea",  placeholder: 'Fill The Details of Tasks ',  rows: "5" %>
                                  <script type="text/javascript">
                                $('#today_textarea').wysihtml5(); 
                                  </script>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Tomorrow's Tasks</label>
                                  <div class="col-sm-9">                       
                                      <%= text_area_tag "report[tomorrows_task]", nil, type:"text", tabindex: "6", class: "form-control", id: "tomorrow_textarea",  placeholder: 'Fill The Details of Tasks ',  rows: "5" %>
                                  <script type="text/javascript">
                                $('#tomorrow_textarea').wysihtml5(); 
                                  </script>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Upload Today's Photos</label>
                                  <div class="col-sm-9">                                  
                                      <div>
                                         <%= file_field_tag "image_attachements[image][]" ,:multiple => true, class: "form-control",tabindex:"3" %>
                                      </div>
                                  </div>
                              </div>

                        
                              <div class="form-group">                
                                  <label class="control-label col-sm-3">Safety Meeting File</label>
                                  <div class="col-sm-9">
                                      <%= hidden_field_tag "report[report_type]" , 'tristatus' %>
                                      <%= file_field_tag "report[safety_doc]" , class: "form-control",tabindex:"4"%>
                                  </div>
                              </div>

                              <div class="form-group">                
                                  <label class="control-label col-sm-3">Safety Meeting</label>
                                  <div class="col-sm-9">
                                      <%= hidden_field_tag "report[report_type]" , 'tristatus' %>
                                      <%= text_area_tag "report[safety_meeting]", nil, type:"text", tabindex: "5", class: "form-control", id: "safety_textarea",  placeholder: 'Fill The Details of Safety Meeting',  rows: "3" %>
                                      <script type="text/javascript">
                                $('#safety_textarea').wysihtml5(); 
                                  </script>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Materials</label>
                                  <div class="col-sm-9"> 
                                    <!-- <textarea id="some-textarea" placeholder="Enter text ..."></textarea> -->
                             
                                                                   
                                      <%= text_area_tag "report[materials]", nil, type:"text", tabindex: "6", class: "form-control", id: "materials_textarea",  placeholder: 'Fill The Details of Materials',  rows: "5" %>
                                  <script type="text/javascript">
                                $('#materials_textarea').wysihtml5(); 
                                  </script>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="control-label col-sm-3">Material's Images</label>
                                  <div class="col-sm-9">                                  
                                    <%= file_field_tag "material_attachements[material_image][]" ,:multiple => true, class: "form-control",tabindex:"7" %>
                                  </div>
                              </div>
                              <div class="row">
                                  <div class="col-sm-3">
                                  </div>
                                  <div class="col-xs-6 col-sm-4">
                                    <%= submit_tag 'Submit', :class => 'btn btn-warning btn-block',tabindex: "8" %>
                                  </div>
                                  <div class="col-xs-6 col-sm-4">
                                      <%= link_to 'Cancel', project_site_path(id: @site.id), :class => 'btn btn-warning btn-block', tabindex: "9" %>
                                  </div>
                              </div>
                          
                              <% end %>
                              </div>
                            </div>
                          </div>
                      </div>

                      <div class="tab-pane fade" id="triharder">
                            <div class="well" id="table_scroll_tri">
                            <div class="row"> 
                            <div class="col-sm-12">                          

                              <%= form_tag project_site_reports_path, :multipart => true,  class: "form-horizontal" do  %>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Summary</label>
                                  <div class="col-sm-9">                                  
                                      <%= text_field_tag "report[summary]", nil, type:"text", tabindex: "1", class: "form-control",  placeholder: 'Fill The Summary' %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Efficiency</label>
                                  <div class="col-sm-9">                                  
                                      <%= text_field_tag "report[effciency]", nil, type:"text", tabindex: "2", class: "form-control", placeholder: 'Fill The Efficiency' %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Controls In Place</label>
                                  <div class="col-sm-9">                                  
                                      <%= text_field_tag "report[controls_in_place]", nil, type:"text", tabindex: "3", class: "form-control",  placeholder: 'Fill The Control in Place' %>
                                  </div>
                              </div>

                                                     
                              <div class="form-group">                
                                  <label class="control-label col-sm-3">Project Start Condition</label>
                                  <div class="col-sm-9">
                                      <%= hidden_field_tag "report[report_type]" , 'triharder' %>
                                      <%= text_area_tag "report[project_start_condition]", nil, type:"text", tabindex: "4", class: "form-control",  placeholder: 'Fill The Details of Project Start Condition',  rows: "2" %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Today's condition</label>
                                  <div class="col-sm-9">                                  
                                      <%= text_area_tag "report[todays_condition]", nil, type:"text", tabindex: "5", class: "form-control",  placeholder: 'Fill The Details of Todays Condition',  rows: "2" %>
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="control-label col-sm-3">Upload Today's Photos</label>
                                  <div class="col-sm-9">                                  
                                      <div>
                                        <%= file_field_tag "image_attachements[image][]" ,:multiple => true, class: "form-control",tabindex:"6" %>
                                      </div>
                                  </div>
                              </div>
                       
                              <div class="row">
                                  <div class="col-sm-3">
                                  </div>
                                  <div class="col-xs-6 col-sm-4">
                                        <%= submit_tag 'Submit', :class => 'btn btn-warning btn-block',tabindex: "7" %>
                                  </div>
                                  <div class="col-xs-6 col-sm-4">
                                      <%= link_to 'Cancel', project_site_path(id: @site.id), :class => 'btn btn-warning btn-block', tabindex: "8" %>
                                  </div>
                              </div>
                          
                              <% end %>
                              </div>
                            </div>
                          </div>
                      </div>
                </div>
            </div>


                            

            
              
             
                    </div>                    

                </div>

                <div class="col-sm-12 pad_top2">
                    <div class="row bg_black bottom_radius">
                        <p class="font_style1 pad_left"> &copy; | Triton | All Rights Reserved |</p>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <div class="col-sm-1"></div>
</div>


         

    <!-- jQuery Version 1.11.0 -->
    <script src="/assets/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/assets/bootstrap.min.js"></script>

</body>

</html>

<% end %>








